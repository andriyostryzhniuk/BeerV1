        <url-pattern>/CodeReturn.do</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>BeerParamTests</servlet-name>
        <servlet-class>andrii.servlets.TestInitParams</servlet-class>
        <init-param>
            <param-name>adminEmail</param-name>
            <param-value>ostryzhnykandriy@gmail.com</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>BeerParamTests</servlet-name>
        <url-pattern>/BeerParam.do</url-pattern>
    </servlet-mapping>
